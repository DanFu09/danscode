<% projects.each_index do |index| 
	project = projects[index]
%>
	<% if index % 3 == 0 %>
		<div class="row-fluid">
			<ul>
	<% end %>
				<li class="span4">
					<a class="thumbnail no-hover-decoration", href="<%= projects_path + '/' + project[:path].to_s%>">
						<% if project[:img] != "" %>
							<%= image_tag(project[:img], :class => "project-thumbnail-image") %>
							
						<% end %>
						<div class="caption">
							<h3 class="flat-top"><%= project[:title] %></h3>
							<p><%= project[:short_description] %></p>
						</div>
					</a>
				</li>
	<% if index % 3 == 2 || index == projects.length - 1 %>
			</ul>
		</div>
		<br />
	<% end %>
<% end %>