<% projects.each_index do |index| 
	project = projects[index]
%>
	<% if index % 3 == 0 %>
		<div class="row-fluid">
			<ul>
	<% end %>
				<li class="span4">
					<div class="thumbnail">
						<% if project[:img] != "" %>
							<div class="project-thumbnail">
								<%= image_tag(project[:img], :class => "project-thumbnail") %>
							</div>
						<% end %>
						<div class="caption">
							<h3><%= project[:title] %></h3>
							<p><%= project[:description] %></p>
						</div>
					</div>
				</li>
	<% if index % 3 == 2 || index == projects.length - 1 %>
			</ul>
		</div>
		<br />
	<% end %>
<% end %>